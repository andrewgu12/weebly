// The code for the page divs and for the text box to add/edit pages
input#addPage, input.editPageBox
	background-color: sidebar_main
	border: 3px solid #4f657b
	border-radius: 4px
	height: 30px
	padding-left: 5px
	color: #fff
	margin-left: 30px
	margin-top:10px
	margin-bottom: 30px
	width: 149px
input.editPageBox
	margin-bottom: 0
// specify the opacity and color for each of the icons
div#addPageBox i
	color: #FFFFFF
	opacity: 0.2
// The indivPage divs
div.buttonLink
	width: 149px
	height: 30px
	margin-left: 30px
	margin-top: 10px
	background: #518dca
	color: #FFFFFF
	padding-left: 10px
	font-size: 13px
	font-weight: bold
	line-height: 30px
	border-radius: 4px
	box-shadow: 1px 1px 0 shadowBoxColor
div.buttonLink:hover
	background: #4f657b
div.buttonLink i
	float: right
	padding-top: 8px
	padding-right: 10px
	opacity: 0
i.addPagePlus, i.editPagePencil
	margin-left: -25px
