// Styles for the sidebar
@import "colors"

// position the sidebar to the left of the page
div#sidebar 
	position: absolute
	left: 0
	width: (sideBarContentWidth)px
	min-height: 100%
	background:sidebar_main
	box-shadow: 0 -2px 0px shadowBoxColor
	margin-top: 2px

// titlebar (header for each section)
div.blueHeader 
	height: 30px
	background: blueHeaderBg
	text-align: center
	line-height: 30px
	box-shadow: 0 2px 0px shadowBoxColor 
div.blueHeader h2
	font-size: 13px
	color: sideBarHeaderText
	font-weight: bold

// stuff within each of the sections under the titlebar
div.sideBarContent
	height: 100%
	min-height: (sideBarContentHeight/2)px
// Create the rows for the drag items
div.row 
	height: (sideBarContentHeight/2)px
	border-bottom: 2px solid sideBarShadow
	position: relative
	clear: both
// item on the left, specify width
div.row div.left 
	width: 106px
// individual items
div.rowBox
	width: (sideBarContentWidth/2)px
	height: (sideBarContentHeight/2)px
	float: left
	border-right:  2px solid sideBarShadow
	text-align: center
p 
	font-size: 13px
	color: sideBarTextColor
	margin-top: 5px
	font-weight: bold
	
// the image to drag
div.dragItem
	width: 55px
	height: 60px
	margin: 0 auto
	margin-top: 15px
div#title
	background-image: url(../images/Element-Icons.png)
	background-position: -8px -5px
div#text 
	background-image: url(../images/Element-Icons.png)
	background-position: -526px -5px
div#image
	background-image: url(../images/Element-Icons.png)
	background-position: -1044px -5px
div#nav
	background-image: url(../images/Element-Icons.png)
	background-position: -1562px -5px


